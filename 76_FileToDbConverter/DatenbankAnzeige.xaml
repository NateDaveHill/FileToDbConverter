<mah:MetroWindow x:Class="_76_FileToDbConverter.DatenbankAnzeige"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                 xmlns:local="clr-namespace:_76_FileToDbConverter"
                 mc:Ignorable="d"
                 WindowStartupLocation="CenterScreen"
                 Title="Datenbank Anzeige" Height="550" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <DataGrid x:Name="DbDataGrid" CanUserAddRows="False" Grid.Row="0" Grid.ColumnSpan="2" Margin="20"
                  IsReadOnly="True" ItemsSource="{Binding}">
        </DataGrid>
        <Button Grid.Row="1" Grid.Column="1" Height="10" Width="100" Margin="15" Click="BtnSließen">Schließen</Button>


    </Grid>
</mah:MetroWindow>