<mah:MetroWindow x:Class="_76_FileToDbConverter.FileSelection"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                 xmlns:local="clr-namespace:_76_FileToDbConverter"
                 mc:Ignorable="d"
                 WindowStartupLocation="CenterScreen"
                 Title="FileSelection" Height="350" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Button Grid.Row="0" Grid.Column="0" Height="10" Width="100" Margin="20,20,20,10" Click="BtnÖffnen">Öffnen</Button>
        <Button Grid.Row="0" Grid.Column="1" Height="10" Width="100" Margin="20,20,20,10" Click="BtnImport">Importieren</Button>

        <TextBox x:Name="txtBox" Grid.Row="1" Grid.ColumnSpan="2" Margin="15"></TextBox>


    </Grid>
</mah:MetroWindow>